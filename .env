# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/todoapp
DB_USERNAME=postgres
DB_PASSWORD=your_actual_postgres_password
DB_MAX_POOL_SIZE=10

# JWT Configuration
JWT_SECRET= #
JWT_ISSUER=todo-app
JWT_AUDIENCE=todo-app-users
JWT_REFRESH_SECRET= #
JWT_ACCESS_EXPIRY=3600      # 1 hour in seconds
JWT_REFRESH_EXPIRY=604800   # 7 days in seconds

# App Configuration
APP_ENVIRONMENT=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@todoapp.com
SMTP_FROM_NAME=Todo App
SMTP_USE_TLS=true
SMTP_DEBUG=false

# Email Templates
EMAIL_VERIFICATION_TTL=86400  # 24 hours in seconds
PASSWORD_RESET_TTL=3600       # 1 hour in seconds